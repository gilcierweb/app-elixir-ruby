<p>Resultados: <%= @results['total_count'] if @results['total_count'].present? %></p>
<% @results['items'].each do |row| %>
  <%# if row.total_count.size > 0 %>
  <div class="card">
    <div class="card-body">
      <h5 class="card-title"><%= row['name'] %></h5>
      <p class="card-text"><%= row['full_name'] %></p>
      <p class="card-text"><%= row['language'] %></p>
      <p class="card-text">
        <small class="text-muted"><a href="<%= row['url'] %>"><%= row['url'] %></a></small>
      </p>
    </div>
  </div>
  <br>
<%# end %>
<% end %>